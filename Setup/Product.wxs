<!-- Releases are always released as major upgrades, i.e. a version number change + Product Code change. -->
<?include $(var.Version.IncludeDir)\Version.wxi ?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi"
     xmlns:util="http://schemas.microsoft.com/wix/UtilExtension">
    <!-- Change the UpgradeCode when the major version changes, i.e. it's essentially a new product. -->
    <Product Id="*"
             Name="AxCrypt $(var.Version)"
             Language="1033"
             Version="$(var.Version)"
             Manufacturer="Axantum Software AB"
             UpgradeCode="$(var.UpgradeCode)">
        <?define AxCryptCLSID="{C3DFC144-30F8-4138-81F9-578DBEB9324A}" ?>
        <?define AxCryptExtension=".axx" ?>
        <?define AxCryptInternalName="axcrypt" ?>
        <?define AxCryptExternalName="AxCrypt" ?>
        <?define AxCryptProgID="axcrypt.File" ?>
        <?define AxCryptRegKey="Software\Axantum\AxCrypt" ?>

        <Package InstallerVersion="200"
                 Compressed="yes"
                 Id="*" />

        <Upgrade Id="$(var.UpgradeCode)">
            <UpgradeVersion Minimum="$(var.Version)"
                            IncludeMinimum="no"
                            OnlyDetect="yes"
                            Language="1033"
                            Property="NEWPRODUCTFOUND" />
            <UpgradeVersion Maximum="$(var.Version)"
                            IncludeMaximum="no"
                            OnlyDetect="no"
                            Language="1033"
                            Property="UPGRADEFOUND" />
        </Upgrade>

        <Condition Message="!(loc.Win95NotSupported)">
            <![CDATA[NOT Version9X = 400]]>
        </Condition>
        <Condition Message="!(loc.Win98NotSupported)">
            <![CDATA[NOT Version9X = 410]]>
        </Condition>
        <Condition Message="!(loc.WinMENotSupported)">
            <![CDATA[NOT Version9X = 490]]>
        </Condition>
        <Condition Message="!(loc.Win2KNotSupported)">
            <![CDATA[NOT VersionNT = 500]]>
        </Condition>
        <Condition Message="!(loc.WinXPNotSupported)">
          <![CDATA[NOT VersionNT = 501]]>
        </Condition>
        <Condition Message="!(loc.Win2003NotSupported)">
          <![CDATA[NOT VersionNT = 502]]>
        </Condition>
        <Condition Message="!(loc.WinNTNotSupported)">
            <![CDATA[NOT VersionNT < 500]]>
        </Condition>

        <!-- If this installer is a 32-bit version, we require the OS to be not 64 bit. -->
        <?if $(var.Platform) = "x86" ?>
        <Condition Message="!(loc.DoNotInstall32BitOn64Bit)">
            <![CDATA[VersionNT64 = ""]]>
        </Condition>
        <?endif?>

        <!-- This causes problems where it can't be installed even after several reboots. Unclear why.
             The intention was to avoid problems when upgrading from 1.6, which typically will require a reboot. -->
        <!--<Condition Message="!(loc.RebootFirst)">
            <![CDATA[MsiSystemRebootPending <> 1]]>
        </Condition>-->

